generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model LocationItem {
  token     String   @unique
  latitude  Float
  longitude Float
  accuracy  Float
  timestamp DateTime
  altitude  Float
  color     String
}
